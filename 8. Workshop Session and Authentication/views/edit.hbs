<div class="container">
    <section class="host">
        <h1>Edit room</h1>
        <form action="/room/{{room._id}}/edit" method="post">
            {{#with room}}
            <label for="city">City</label>
            <input type="text" name="city" id="city" value="{{city}}" required />
            <label for="description">Description</label>
            <input type="text" name="description" id="description" value="{{description}}" required />
            <label for="price">Price</label>
            <input type="number" name="price" value="{{price}}" required id="price" />
            <label for="beds">Beds</label>
            <input type="number" name="beds" id="beds" value="{{beds}}" required />
            <label for="image-url">Add image url</label>
            <input type="url" name="imgUrl" id="image-url" value="{{imgUrl}}" required />
            <input type="submit" class="button" value="Update Room" />
            {{/with}}
        </form>
        {{#if error}}
        <p class="error">{{error}}</p>
        {{/if}}
    </section>
</div>